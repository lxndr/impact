artist-track-list
  position: absolute
  display: block
  right: 0
  bottom: 0
  left: $sidebar-width
  top: $header-height + $header-padding * 2
  overflow: auto

  album >
    .title
      font-weight: bold

  ul.track-list
    list-style-type: none
    margin: 0
    padding: 0

    a
      display: block
      background: white
      color: black
      text-decoration: none
      padding: 2px 4px
      border-radius: 2px

    a:hover
      background: #ccc

    .number
      width: 30px
      display: inline-block
      text-align: right
      margin-right: 5px
