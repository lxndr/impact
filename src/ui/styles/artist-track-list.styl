artist-track-list
  position: absolute
  display: block
  right: 0
  bottom: 0
  left: $sidebar-width
  top: $header-height + $header-padding * 2
  overflow: auto
  padding: 4px

  album
    clear: both

  .album-title
      font-weight: bold
      font-size: 1.1em

  disc
    .cover
      width: 200px
      float: left

  ul.track-list
    list-style-type: none
    margin: 0 0 0 210px
    padding: 0

    a
      display: block
      background: white
      color: black
      text-decoration: none
      padding: 2px 4px
      border-radius: 2px

    a:hover
      background: #ccc

    .number
      width: 30px
      display: inline-block
      text-align: right
      margin-right: 5px
