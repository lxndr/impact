artist-track-list
  position: absolute
  display: block
  right: 0
  bottom: 0
  left: $sidebar-width
  top: $header-height + $header-padding * 2
  overflow: auto

  album
    clear: both
    margin: 4px

  .album-title
      font-weight: bold
      font-size: 1.1em

  disc
    display: block
    margin: 8px 0
    .cover
      width: 200px
      float: left

  .disc-title
  .track-list
    margin: 0 0 0 210px
    padding-left: 4px
    border-left: 1px solid #ccc

  .disc-title
    font-style: italic

  .track-list
    list-style-type: none

    li.playing
      a
        background: yellow

    a
      display: block
      background: white
      color: black
      text-decoration: none
      padding: 3px 4px
      border-radius: 2px

    a:hover
      background: #ccc

    .number
      width: 30px
      display: inline-block
      text-align: right
      margin-right: 5px
      color: grey
