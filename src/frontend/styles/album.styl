.album
  display: block
  > .image-list
    width: 200px
    float: left
    padding: 1px
    > img
      width: 100%
  > .info
    margin-left: 210px
    > .title
      color: gray
      font-weight: bold
    > .disc
      .subtitle
        font-style: italic
      .track-list
        list-style: none
        margin: 0
        padding: 0
      .track
        cursor: pointer
        border-radius: 3px
        padding: 2px
        padding-left: 4px
        &:hover
          color: black
          font-style: normal
          background: #eee
        .number
          color: gray
