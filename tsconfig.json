{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "common/*": ["src/common/*"]
    },
  },
  "include": [
    "src/**/*.js",
    "src/common/externals.d.ts"
  ],
  "exclude": [
    "src/renderer/__tests__/frontend/**/*.js",
    "src/renderer/components/form/**/*.js",
    "src/renderer/components/preferences/**/*.js"
  ]
}
